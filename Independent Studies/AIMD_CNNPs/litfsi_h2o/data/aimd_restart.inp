&GLOBAL
  PROJECT litfsi_h2o_relax
  RUN_TYPE MD            
  PRINT_LEVEL MEDIUM     
&END GLOBAL

&MOTION
    &MD
      ENSEMBLE NVT
      STEPS 5000  
      TIMESTEP 0.5  
      TEMPERATURE 298
      &THERMOSTAT
        TYPE NOSE
        REGION GLOBAL
        &NOSE
          TIMECON 100.0
        &END NOSE
      &END THERMOSTAT
    &END MD
    &PRINT
        &TRAJECTORY
            FILENAME =../results/litfsi_h2o_relax-pos.xyz
            &EACH
            MD 1  
            &END EACH
        &END TRAJECTORY
        &VELOCITIES
            FILENAME =../results/itfsi_h2o_relax-vel.xyz
            &EACH
            MD 1
            &END EACH
        &END VELOCITIES
        &FORCES
            FILENAME =../results/itfsi_h2o_relax-frc.xyz
            &EACH
            MD 1
            &END EACH
        &END FORCES
    &END PRINT
&END MOTION

&FORCE_EVAL
  METHOD QS               
  &DFT
    BASIS_SET_FILE_NAME /opt/homebrew/share/cp2k/data/BASIS_MOLOPT
    POTENTIAL_FILE_NAME /opt/homebrew/share/cp2k/data/GTH_POTENTIALS
    LSD F                                      
    CHARGE 0                                   
    MULTIPLICITY 1                             
    &MGRID
      CUTOFF 400                            
      REL_CUTOFF 50                         
      NGRIDS 5                                 
    &END MGRID
    &QS
      METHOD GPW                               
      EPS_DEFAULT 1.0E-10                                                 
      EXTRAPOLATION ASPC                       
      EXTRAPOLATION_ORDER 4                   
    &END QS
    &SCF
      SCF_GUESS ATOMIC                         
      EPS_SCF 1.0E-6                           
      MAX_SCF 100
      IGNORE_CONVERGENCE_FAILURE                              
      &OT                                      
        MINIMIZER DIIS                         
        PRECONDITIONER FULL_ALL                
        ALGORITHM IRAC                         
      &END OT
      &OUTER_SCF ON                            
        EPS_SCF 1.0E-6                         
        MAX_SCF 15                             
      &END OUTER_SCF
    &END SCF
    &XC                                        
      &XC_FUNCTIONAL BLYP                       
      &END XC_FUNCTIONAL
      &VDW_POTENTIAL                           
        POTENTIAL_TYPE PAIR_POTENTIAL
        &PAIR_POTENTIAL
          TYPE DFTD3(BJ)                       
          CALCULATE_C9_TERM .TRUE.
          REFERENCE_C9_TERM .TRUE.
          LONG_RANGE_CORRECTION .TRUE.
          PARAMETER_FILE_NAME dftd3.dat        
          REFERENCE_FUNCTIONAL BLYP
        &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
    &END XC
    &POISSON
      PERIODIC XYZ                             
    &END POISSON
  &END DFT
  &SUBSYS
    &CELL
      ABC 14.936 14.936 14.936                       
      PERIODIC XYZ                             
    &END CELL
    &TOPOLOGY
      COORD_FILE_FORMAT PDB                    
      COORD_FILE_NAME ../data/gro_md/final_npt_elements.pdb          
      CONNECTIVITY OFF                         
    &END TOPOLOGY
    &KIND Li
      ELEMENT Li                                  
      BASIS_SET DZVP-MOLOPT-SR-GTH              
      POTENTIAL GTH-BLYP-q3                     
    &END KIND
    &KIND C
      ELEMENT C                                  
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-BLYP-q4
    &END KIND
    &KIND H                                    
      ELEMENT H
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-BLYP-q1
    &END KIND
    &KIND O
      ELEMENT O                                    
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-BLYP-q6
    &END KIND
    &KIND N                                    
      ELEMENT N
      BASIS_SET DZVP-MOLOPT-SR-GTH                
      POTENTIAL GTH-BLYP-q5                     
    &END KIND
    &KIND S                                    
      ELEMENT S
      BASIS_SET DZVP-MOLOPT-SR-GTH                
      POTENTIAL GTH-BLYP-q6                     
    &END KIND
    &KIND F                                    
      ELEMENT F
      BASIS_SET DZVP-MOLOPT-SR-GTH                
      POTENTIAL GTH-BLYP-q7                     
    &END KIND
  &END SUBSYS
&END FORCE_EVAL

&EXT_RESTART
  RESTART_FILE_NAME ../main/litfsi_h2o_relax-1_5000.restart
&END EXT_RESTART
