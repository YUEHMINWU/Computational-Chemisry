&GLOBAL
  PROJECT dft_label
  RUN_TYPE ENERGY_FORCE
  PRINT_LEVEL LOW
&END GLOBAL
&FORCE_EVAL
  METHOD QS
  &DFT
    BASIS_SET_FILE_NAME /opt/homebrew/share/cp2k/data/BASIS_MOLOPT
    POTENTIAL_FILE_NAME /opt/homebrew/share/cp2k/data/GTH_POTENTIALS
    CHARGE 0
    MULTIPLICITY 1
    &MGRID
      CUTOFF 400
      REL_CUTOFF 50
      NGRIDS 5
    &END MGRID
    &QS
      METHOD GPW
      EPS_DEFAULT 1.0E-10
    &END QS
    &SCF
      SCF_GUESS ATOMIC
      EPS_SCF 1.0E-6
      MAX_SCF 100
      IGNORE_CONVERGENCE_FAILURE
      &OT
        MINIMIZER DIIS
        PRECONDITIONER FULL_ALL
        ALGORITHM IRAC
      &END OT
      &OUTER_SCF ON
        EPS_SCF 1.0E-6
        MAX_SCF 5
      &END OUTER_SCF
    &END SCF
    &XC
      &XC_FUNCTIONAL BLYP
      &END XC_FUNCTIONAL
      &VDW_POTENTIAL
        POTENTIAL_TYPE PAIR_POTENTIAL
        &PAIR_POTENTIAL
          TYPE DFTD3(BJ)
          CALCULATE_C9_TERM .TRUE.
          REFERENCE_C9_TERM .TRUE.
          LONG_RANGE_CORRECTION .TRUE.
          PARAMETER_FILE_NAME dftd3.dat
          REFERENCE_FUNCTIONAL BLYP
        &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
    &END XC
    &POISSON
      PERIODIC XYZ
    &END POISSON
  &END DFT
  &PRINT
    &FORCES ON
    &END FORCES
  &END PRINT
  &SUBSYS
    &CELL
      ABC 14.936 14.936 14.936
      PERIODIC XYZ
    &END CELL
    &TOPOLOGY
      COORD_FILE_FORMAT XYZ
      COORD_FILE_NAME input.xyz
      CONNECTIVITY OFF
    &END TOPOLOGY
    &KIND Li
      ELEMENT Li
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-BLYP-q3
    &END KIND
    &KIND C
      ELEMENT C
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-BLYP-q4
    &END KIND
    &KIND H
      ELEMENT H
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-BLYP-q1
    &END KIND
    &KIND O
      ELEMENT O
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-BLYP-q6
    &END KIND
    &KIND N
      ELEMENT N
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-BLYP-q5
    &END KIND
    &KIND S
      ELEMENT S
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-BLYP-q6
    &END KIND
    &KIND F
      ELEMENT F
      BASIS_SET DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-BLYP-q7
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
